
<skin>
	<screen name="ListTemplate">
		<widget name="list"
                position="350,210"
                size="640,440"
                foregroundColor="white"
                foregroundColorSelected="white"
                foregroundColorEvent="bluetext"
                foregroundColorEventSelected="white"
                foregroundColorMarked="white"
                foregroundColorMarkedSelected="guidecolor"
                foregroundColorServiceNotAvail="select-middle"
                backgroundColor="mid"
                backgroundColorSelected="select-middle"
                backgroundColorMarked="black"
                backgroundColorMarkedSelected="black"
                colorServiceRecorded="red"
                serviceItemHeight="36"
                serviceNameFont="Regular;21"
                serviceInfoFont="Regular;21"
                serviceNumberFont="Regular;21"
                picServiceEventProgressbar="q-progressbars/progress-50-6.png"
                progressbarHeight="6"
                progressbarBorderWidth="1"
                progressBarWidth="50"
                colorEventProgressbar="select-lightblue-bg"
                colorEventProgressbarSelected="select-lightblue-bg"
                colorEventProgressbarBorder="white"
                colorEventProgressbarBorderSelected="white"
                fieldMargins="8"
                nonplayableMargins="8"
                itemsDistances="8"
                transparent="1"

                scrollbarMode="showOnDemand" />
	</screen>
		
        <screen name="ChannelSelection" flags="wfNoBorder" position="0,0" size="1280,720" backgroundColor="mid">
		<panel name="template1" />
		<eLabel text="TV Guide" position="28,25" size="269,94" valign="bottom" halign="right" font="Regular;42" zPosition="2" transparent="1" foregroundColor="white" backgroundColor="topleft"/>
		<eLabel text="TV Guide" position="30,27" size="269,94" valign="bottom" halign="right" font="Regular;42" zPosition="1" transparent="1" foregroundColor="text-shadow" backgroundColor="topleft"/>
		
                <ePixmap pixmap="epg/epg-background.png" position="327,0" size="953,720" alphatest="blend" zPosition="-1" />

		<panel name="ListTemplate" />
	
	        <!-- dividers -->
                <ePixmap pixmap="q-backgrounds/v-divider.png" position="1000,60" size="1,110" alphatest="blend" />
 	        <ePixmap pixmap="q-backgrounds/h-divider.png" position="329,176" size="951,1" alphatest="blend"  />
	
		<!-- picon -->
		<widget source="Service" render="Picon" position="1018,25" size="100,60" alphatest="blend">
			<convert type="ServiceName">Reference</convert>
		</widget>
		
		<!-- now name -->
		<widget source="ServiceEvent" render="Label" position="360,28" size="640,32" halign="left" valign="top" foregroundColor="white" backgroundColor="topmid" noWrap="1" font="Bold;28" transparent="1">
			<convert type="EventName">NowName</convert>
		</widget>
		
		<!-- now description -->
		<widget source="ServiceEvent" render="RunningText" options="movetype=running,startpoint=0,direction=top,steptime=80,repeat=0,always=0,oneshot=0,startdelay=6000,wrap"
                position="360,63" size="640,106" halign="left" valign="top" foregroundColor="white" backgroundColor="topmid" font="Regular;23" transparent="1" >
			<convert type="EventName">FullDescription</convert>
		</widget>
		
		<!-- now times -->
		<widget source="ServiceEvent" render="Label" position="1015,118" size="224,28" halign="left" valign="top" foregroundColor="white" backgroundColor="topright" font="Regular;23" transparent="1" >
			<convert type="EventTime">StartTime</convert>
			<convert type="SlykQClockToText">SlykQStartTime</convert>
		</widget>
	
 	        <!-- now duration -->
		<widget source="ServiceEvent" render="Label" position="1015,90" size="224,26" halign="left" valign="top" foregroundColor="white" backgroundColor="topright" font="Regular;23" transparent="1" >
			<convert type="EventTime">Duration</convert>
			<convert type="SlykQClockToText">SlykAsLength</convert>	
		</widget>
		
		  <!-- recording icon -->
                <widget position="1015,147" size="20,20" source="session.RecordState" render="Pixmap" pixmap="q-icons/record.png" alphatest="blend" zPosition="4">
			<convert type="ConditionalShowHide" />
		</widget>
		
		<!-- next programme -->
		<widget source="ServiceEvent" render="Label" position="1015,210" size="224,22" font="Bold;16" foregroundColor="guidecolor" backgroundColor="midright" noWrap="1" valign="top" halign="left" transparent="1" >
			<convert type="EventName">NextName</convert>
		</widget>
		<widget source="ServiceEvent" render="Label" position="1015,228" size="224,22" font="Bold;16" foregroundColor="guidecolor" backgroundColor="midright" valign="top" halign="left" noWrap="1" transparent="1" >
			<convert type="EventTime">NextStartTime</convert>
			<convert type="SlykQClockToText">SlykQStartTime</convert>
		</widget>
		<widget source="ServiceEvent" render="Label" position="1015,250" size="224,162" font="Regular;16" foregroundColor="white" backgroundColor="midright" valign="top" transparent="1" >
			<convert type="EventName">NextDescription</convert>
		</widget>
		
		<!-- later programme -->
		<widget source="ServiceEvent" render="Label" position="1015,435" size="224,22" font="Bold;16" foregroundColor="guidecolor" backgroundColor="botright" valign="top" halign="left" noWrap="1" transparent="1">
			<convert type="EventName">ThirdName</convert>
		</widget>
	
		<widget source="ServiceEvent" render="Label" position="1015,451" size="224,22" font="Bold;16" foregroundColor="guidecolor" backgroundColor="botright" valign="top" halign="left" noWrap="1" transparent="1">
			<convert type="EventTime">ThirdStartTime</convert>
			<convert type="SlykQClockToText">SlykQStartTime</convert>
		</widget>

		<widget source="ServiceEvent" render="Label" position="1015,475" size="224,162" font="Regular;16" foregroundColor="white" backgroundColor="botright" valign="top" transparent="1" zPosition="4">
			<convert type="EventName">ThirdDescription</convert>
		</widget>
		
		<!-- icons -->
		<widget source="session.CurrentService" render="Pixmap" pixmap="q-icons/hd.png" position="1123,94" size="30,20" alphatest="blend">
                 	<convert type="ServiceInfo">IsHD</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		<widget source="session.CurrentService" render="Pixmap" pixmap="q-icons/sd.png" position="1123,94" size="30,20" alphatest="blend">
                	<convert type="ServiceInfo">IsHD</convert>
			<convert type="ConditionalShowHide">Invert</convert>
		</widget>
		
		<widget source="session.CurrentService" render="Pixmap" pixmap="q-icons/widescreen.png" position="1158,94" size="21,20" alphatest="blend">
			<convert type="ServiceInfo">IsWidescreen</convert>
			<convert type="ConditionalShowHide"/>
		</widget>
		
		<widget source="session.CurrentService" render="Pixmap" pixmap="q-icons/dolby.png" position="1184,94" size="30,20" alphatest="blend">
                        <convert type="ServiceInfo">IsMultichannel</convert>
			<convert type="ConditionalShowHide" />
		</widget>
		
                <widget source="session.CurrentService" render="Pixmap" pixmap="q-icons/subtitles.png" position="1219,94" size="21,20" alphatest="blend">
                  	<convert type="ServiceInfo">SubtitlesAvailable</convert>
			<convert type="ConditionalShowHide" />
		</widget>
	
		<panel name="4RGYB" />
		<panel name="MenuButton" />
		<panel name="InfoButton-pos2" />
