		<alias name="ChoiceList" font="Regular" size="20" height="30" />
		
		<!-- plugins -->
		<alias name="PluginBrowser0" font="Regular" size="21" height="30" />        <!-- plugin name -->
		<alias name="PluginBrowser1" font="Regular" size="14" height="20" />        <!-- plugin description -->
		
                <!-- help menus -->
		<alias name="HelpMenuList" font="Regular" size="23" height="30" />
		
                <!-- virtual keyboard -->
		<alias name="VirtualKeyboard" font="Regular" size="26" height="45" />
		
                <!-- used on tuner config - positioner -->
